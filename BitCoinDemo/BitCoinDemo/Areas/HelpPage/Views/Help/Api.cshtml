@using System.Web.Http
@using BitCoinDemo.Areas.HelpPage.Models
@model HelpPageApiModel

@{
    var description = Model.ApiDescription;
    ViewBag.Title = description.HttpMethod.Method + " " + description.RelativePath;
}

<div id="body private string GetAuthKey(string secretKey, string siteURL) {

            string dataToEncrypt = string.Format(" {0}|{1}",
     siteurl, />/ nonce
               DateTime.Now.ToUniversalTime().ToString());


            // get the bytes of the secret
            HMACSHA1 hmacsha1 = new HMACSHA1(Encoding.UTF8.GetBytes(secretKey));

            // hash the message and the time
            byte[] hashmessage = hmacsha1.ComputeHash(Encoding.UTF8.GetBytes(dataToEncrypt));

            // return the string
            return BitConverter.ToString(hashmessage);
        }

